<p id="notice"><%= notice %></p>

<% Post.globalize_locales.each do |locale| %>
  <%= link_to locale, "/#{locale}/" + params[:controller], :class => "btn #{
    locale == I18n.locale ? 'btn-default' : 'btn-primary'} btn-xs" %>
<% end %> 


<h1><%= t(:posts_header) %> - <%= t(:language) %> </h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t(:posts_title_label) %></th>
      <th><%= t(:posts_text_label) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>

      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>

        <td><%= link_to t(:show), post, :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to t(:edit), edit_post_path(post), :class => "btn btn-primary btn-xs" %></td>
        <td><%= link_to t(:destroy), post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to t(:new), new_post_path, :class => "btn btn-primary" %>
